
#include <iostream>

using namespace std;


/* Ejercicio 8. Escriba un programa que pida un n√∫mero N e imprima en pantalla su factorial.
    Ej: si se ingresa 5: 5!=1*2*3*4*5=120, por lo que se debe imprimir:
    5!=120
*/

int main ()
{
    int N;
    double C;
    int i;

    cout<<"Dame un numero: ";
    cin>>N;

    C=1;

    for (i=1; i<=N; i++){
        C=C*i;
    }

    cout<<N<< "! = "<<C<<endl<<endl;

    return 0;

}
