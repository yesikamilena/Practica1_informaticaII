
#include <iostream>

using namespace std;

/* Ejercicio 12. Escriba un programa que pida un número N e imprima todas las potencias desde N**1 hasta N**5.
    Ej: si se ingresa 3 se debe imprimir:
    3∧1=3
    3∧2=9
    3∧3=27
    3∧4=81
    3∧5=243
*/

int main ()
{
    int N;
    int i;
    double C;

    cout<<"Dame un numero: ";
    cin>>N;

    C=N;

    cout<< N <<" elevado a "<< 1 <<" = "<< N << endl;

    for(i=2; i<=5; i++){
        C=C*N;
        cout<< N <<" elevado a "<< i <<" = "<< C << endl;
    }

    return 0;
}

